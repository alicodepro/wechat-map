/* pages/user/user.wxss */
page{
	background: #f1f1f1;
}

.padd {
	padding: 0 20rpx;
}

.user {
	display: flex;
	flex-direction: column;
	border-radius: 8rpx;
	background-color: #fff;
	margin-top: 20rpx;
	z-index: 1;
	position: relative;
	box-shadow: 0 0 10rpx 0 rgba(87, 0, 0, 0.06);
	padding: 0 50rpx;
}

.user .userinfo {
	display: flex;
	margin-top: 50rpx;
	margin-bottom: 20px;
}

.user .userinfo .user-item {
	display: flex;
	flex-direction: column;
	justify-content: space-between;

}

.user-item .avatar {
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	overflow: hidden;
	margin-right: 20rpx;
}

.user-item .nickname {
	font-size: 0.8rem;
}

.user-item .getuserinfo {
	text-align: center;
	height: 40rpx;
	line-height: 40rpx;
	width: 120rpx;
	color: #f9a336;
	font-size: 0.5rem;
	border: #f9a336 1px solid;
	border-radius: 20rpx;
}

.user-item button {
	padding: 0;
	color: #1C2833;
	font-size: 0.9rem;
	background-color: transparent;
	border: none;
	outline: none;
}

.user-item button::after {
	border: 0;
}

.warps{
	display: flex;
	justify-content: space-between;
	margin: 15rpx 0rpx 15rpx 0rpx;
}

.warp-info {
	text-align: center;
	color: #888;
	font-size: 0.6rem;
	display: flex;
	flex-direction: column;
}

.warp-info .icon {
	width: 48rpx;
	height: 48rpx;
	margin: 10rpx auto;
}

image {
	width: 100%;
	height: 100%;
}

.list {
	background-color: #FFF;
	margin-top: 20rpx;
	padding: 20rpx;
	box-shadow: 0 0 10rpx 0 rgba(87, 0, 0, 0.06);
	border-radius: 8rpx;
}

.list button {
	padding: 0;
	background-color: transparent;
	border: none;
	outline: none;
}

.list button::after {
	border: 0;
}

.list .nav {
	height: 70rpx;
	display: flex;
	align-items: center;
	padding: 0 30rpx;
}

.list .nav image {
	width: 40rpx;
	height: 40rpx;
	margin-right: 40rpx;
}

.list .nav .txt {
	font-size: 28rpx;
	color: #1C2833;
}

.list .nav .next {
	width: 14rpx;
	height: 14rpx;
	border-top: 1px solid #CCCCCC;
	border-right: 1px solid #CCCCCC;
	transform: rotate(45deg);
	margin-left: auto;
	margin-right: 0;

}
