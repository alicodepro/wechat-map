/**index.wxss**/
.map {
  width: 100%;
  height: 100%;
}
/* 地图控件 */
.controll{
  position: relative;
	left: 15px;
  padding: 5px;
	width: 25px;
	height: 25px;
	background: #fff;
	border-radius: 100px;
  margin: 10px 0;
}
.layers{
  top:61%;
}
.position{
	top: 61%;
}
/* 左侧菜单栏 */
.menu{
	position: fixed;
	border-radius: 100px;
	background: #fff;
	right: 15px;
	bottom: 25%;
	display: flex;
	flex-direction: column;
	align-content: center;
}

.menu-item{
	margin: 3px auto;
	width: 28px;
	height: 28px;
	border-radius: 100px;
	overflow: hidden;
}
.user {
	width: 27px !important;
	height: 27px !important;
	border: #f9a336 solid 1px;
}
.add-map{
	margin-top: 12px;
	background: #f9a336;
}

.toolbar {
  z-index: 9999;
  position: fixed;
  width: 90%;
  left: 0;
  right: 0;
  border-radius: 50px;
  bottom: 8%;
  margin: 0 auto;
  background: #E7E7E7;
}

.content {
  display: flex;
  justify-content: space-between;
}
.map-token{
	margin-left: 20px;
	width: 70%;
}
input{
	height: 100%;
	line-height: 100%;
	color: #565E7A;
	font-size: 12pt;
}
.nav{
  background:#fff;
  width: 38px;
  height: 38px;
  border-radius: 100px;
  align-content: center;
}
.icon{
  margin: 5px auto;
  width: 24px;
  height: 24px;
}

