/* pages/map/list.wxss */
page {
	background: #f1f1f1;
}

.list {
	display: flex;
	flex-direction: column;
	margin: 5px 0 0 0;
}

.list-item {
	display: flex;
	padding: 10px;
	width: 90%;
	background: #fff;
	margin: 5px auto;
}

.pic {
	width: 84px;
	height: 69px;
}

.info {
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	color: #8a8a8a;
	font-size: 13px;
	margin-left: 15px;
}

.title {
	font-size: 16px;
	line-height: 30px;
	color: #2c2c2c;
}
.load-more{
	margin: 20px 0 20px 0;
}
